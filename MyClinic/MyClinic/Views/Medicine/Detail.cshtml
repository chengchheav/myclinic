@model MyClinic.Models.MedicineModels
@using MyClinic.Resources;
@using Utilities;
@{
    ViewBag.Title = Translator.MedicineDetail;
    var host = Utilities.Common.host;
}

<div class="title">@Translator.MedicineDetail</div>
<div class="detail-html">
    <div class="inner"  id="dtl-item">
        <table>
            <tr>
                <td class="editor-label">
                        <Label>@Translator.Name</Label>
                </td>
                <td class="editor-field"  >:
                    @Html.DisplayFor(model => model.dtomedicine.Name)
                </td>
            </tr>
            <tr>
                <td class="editor-label">
                        <Label>@Translator.Status</Label>
                </td colspan="3">
                <td class="editor-field" >: 
                    @(Model.dtomedicine.Status == 1 ? Translator.Active : Translator.Inactive)
                </td>
            </tr>
            <tr>
                <td class="editor-label">
                    <Label>@Translator.CreatedBy</Label>
                </td>
                <td class="editor-field"  >:
                    @Html.DisplayFor(model => model.dtomedicine.U_Name)
                </td>
            </tr>
            <tr>
                <td class="editor-label">
                        <Label>@Translator.CreatedDate</Label>
                </td>
                <td class="editor-field"  >:
                    @Common.GetDateTimeFormateFull(Model.dtomedicine.CreatedDate)
                </td>
            </tr>
            <tr>
                <td class="editor-label">
                        <Label>@Translator.Description</Label>
                </td>
                <td class="editor-field"  colspan="3">:
                    @Html.DisplayFor(model => model.dtomedicine.Description)
                </td>  
            </tr>

            <tr class="rlst-btn">
                <td colspan="2">
                    <input onclick="$Common.setRedirectPage('@Url.Action("Edit", "Medicine", new { Id = Model.dtomedicine.Id })');" class="myLabel" type="button" value="@Translator.Edit"/>
                    <input onclick="$Common.setRedirectPage('@Url.Action("Index", "Medicine")');" class="myLabel" type="button" value="@Translator.BackToList"/>
                </td>
            </tr>
        </table>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $transaction.initDefindActionId("1");
        $transaction.initChangeClassMenu("medicine", "medicine-selected");
    });
</script>