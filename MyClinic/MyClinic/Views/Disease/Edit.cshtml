@model MyClinic.Models.DiseaseModels
@using MyClinic.Resources; 
@using Utilities;
@{
    ViewBag.Title = Translator.EditDisease;
    var host = Utilities.Common.host;
    var objTranslateSwitch = new TranslateSwitch();
}

<div class="title">@Translator.EditDisease</div>
<div class="frm-bx">
    <div class="frm-info">
        <p>@Translator.MessageForm <strong>@Translator.MessageFormBold</strong>. <strong>@Translator.Note:</strong> @Translator.MessageForm1</p>
    </div>
    @using (Html.BeginForm())
    { 
        @Html.ValidationSummary(true) 
        <div style="width:500px;">
            <fieldset>
                <table >
                    @Html.Hidden("Id",Model.disease.Id)
                     <tr>
                        <td class="editor-label imp">
                            <Label>@Translator.Name</Label>
                        </td>
                        <td class="editor-field">
                            @Html.TextBox("Name",Model.disease.Name) 
                            <div class="error">
                                 @Html.Raw(objTranslateSwitch.Get(Html.ValidationMessage("Name")))
                            </div>
                        </td>
                    </tr>
                    <!--<tr>
                        <td class="editor-label">
                            <Label>@Translator.Status</Label>
                        </td>
                        <td class="editor-field"  >
                            @Html.DropDownList("Status", new List<SelectListItem>
                            {
                                new SelectListItem { Text = Translator.Active, Value = "1",Selected=(@Model.disease.Status ==1 ? true:false)},
                                new SelectListItem { Text = Translator.Inactive, Value = "0",Selected=(@Model.disease.Status ==0 ? true:false)}
                            })
                        </td>
                    </tr>-->
                    <tr>
                        <td class="editor-label">
                            <Label>@Translator.Description</Label>
                        </td>
                        <td class="editor-field" colspan="2">
                            @Html.TextArea("Description",Model.disease.Description, new { @class = "form-control", @cols = 35, @rows = 6 })
                            <div class="error">
                                @Html.Raw(objTranslateSwitch.Get(Html.ValidationMessage("Description")))
                            </div>
                        </td>
                        
                    </tr>

                    <tr><td colspan="2"><input id="btnSubmit" class="myLabel" type="submit" value="@Translator.Save"/></td>
                </tr> 
                </table>
            </fieldset>
        </div>
    }
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $transaction.initDefindActionId("1");
        $transaction.initChangeClassMenu("disease", "disease-selected");
    });
</script>