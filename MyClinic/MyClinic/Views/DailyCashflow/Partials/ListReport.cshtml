            <tr class="@clssR">
                <td>&nbsp;&nbsp;&nbsp;&nbsp;@record.Name</td>		
                <td class="rgh" style="padding-right: 2%;">@Utilities.Common.GetCurrencyFormate(record.Amount)</td>
